@model IEnumerable<Exam_Info.Models.Tbl_DTT3>
@{
    ViewBag.Title = "Data_Test3";
    Layout = "~/Views/Shared/College_LayoutPage.cshtml";
}

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    #btn_submit {
        width: 200px;
        padding: 5px;
        position: absolute;
        right: 20px;
    }
</style>

<div class="row">
    <div class="col-sm-6">
        <h2>Data Test3</h2>
    </div>
    <div class="col-sm-6">
        <button class="btn btn-success" id="btn_submit" onclick="return confirm('Do you want to download ?')">@Html.ActionLink("Download Excel", "College_DTT3", "College", new { controller = "College" })</button><br />
    </div>
</div>


<div class="row" style="border:inset 2px  #3eadcf"></div>
<br />

<div class="table-responsive pt-3  ">
    <center>
        <table class="AppFormTable " style="background-color: #e7fafe;">
            <tr>
                <th>
                    Sr. No
                </th>
                <th>
                    Index No New
                </th>
                <th>
                    Index No Old
                </th>

                <th>
                    Date Time
                </th>
                <th>
                    MAC
                </th>
                <th>
                    Login
                </th>
                <th>
                    QP
                </th>
                <th>
                    Hit
                </th>

            </tr>
            @{int i = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span>@i</span>
                        @{i++;}
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Index_NoN)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Index_No)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Datetime)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.MAC)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Login)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.QP)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Hit)
                    </td>
                </tr>
            }
        </table>
    </center>
</div>

